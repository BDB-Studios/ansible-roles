upstream phpfcgi {
    server 127.0.0.1:9000;
}

server {
    listen {{ domain_data.port | default(443) }} ssl;

    # server_name {{ target }}.{{ global_data.domain }};
    server_name _;
    root   {{ domain_data.document_root }}/_releases/web;

    add_header Strict-Transport-Security "max-age=31536000";
    ssl_certificate /etc/nginx/ssl/{{ target }}.{{ global_data.domain }}.crt;
    ssl_certificate_key /etc/nginx/ssl/{{ target }}.{{ global_data.domain }}.pem;

    access_log  /var/log/nginx/{{ domain_data.site_name }}.access.log;
    error_log  /var/log/nginx/{{ domain_data.site_name }}.error.log notice;

    # strip app.php/ prefix if it is present
    rewrite ^/app\.php/?(.*)$ /$1 permanent;

    location / {
        index app.php;
        try_files $uri @rewriteapp;
    }

    location @rewriteapp {
        rewrite ^(.*)$ /app.php/$1 last;
    }

    # pass the PHP scripts to FastCGI server from upstream phpfcgi
    location ~ ^/(app|app_dev|config)\.php(/|$) {
        include snippets/fastcgi-php.conf;
        fastcgi_pass 127.0.0.1:9000;
    }
}
